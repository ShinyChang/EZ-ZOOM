{
  "name": "EZ Zoom",
  "version": "1.5",
  "description": "Press + - * can zoom just like Opera browser.",
  "browser_action": {
    "popup": "popup.html",  
    "default_icon": "icon.png"
  }, 
  "content_scripts": [ {
      "all_frames": true,
      "js": [ "content.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
  } ],
  "background_page": "background.html",
  "options_page": "option.html",

  "icons": {
      "128": "icon.png",
      "48": "icon.png"
   },
  "permissions": [
     "tabs", "http://*/*", "https://*/*"
  ]

}